<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="@dimen/gap_tiny"
    android:paddingLeft="@dimen/gap_tiny"
    android:gravity="center_vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contact_thumbnail"
        android:layout_width="@dimen/clickable_icon_size_tiny"
        android:layout_height="@dimen/clickable_icon_size_tiny"
        android:layout_margin="@dimen/gap_tiny"
        tools:src="@mipmap/placeholder_contact_photo"
        app:shapeAppearanceOverlay="@style/Theme.RahulsTechPhoneBook.RoundedPhoto"/>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginBottom="@dimen/gap_small"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_secondary"
        tools:text="This is a very very very very very very long name to properly fit into the space" />

</LinearLayout>