<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="fill"
    android:paddingTop="8dp"
    android:baselineAligned="false">

    <include
        android:id="@+id/two_lines"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/list_item_two_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/action_remove"/>

    <ImageButton
        android:id="@+id/action_remove"
        style="@style/Theme.RahulsTechPhoneBook.ProfileSmallActionButton"
        android:contentDescription="@string/action_button_remove_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_delete"
        app:tint="@color/color_mute"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/gap_tiny"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/two_lines">

        <ImageButton
            android:id="@+id/action_voice_call"
            android:contentDescription="@string/action_button_voice_call_description"
            style="@style/Theme.RahulsTechPhoneBook.ProfileSmallActionButton"
            android:src="@drawable/ic_baseline_phone"
            app:tint="@color/color_dark_yellow_green"/>

        <ImageButton
            android:id="@+id/action_sms"
            android:contentDescription="@string/action_button_sms_description"
            style="@style/Theme.RahulsTechPhoneBook.ProfileSmallActionButton"
            android:src="@drawable/ic_baseline_textsms"
            app:tint="@color/color_blue"/>

        <ImageButton
            android:id="@+id/action_video_call"
            android:contentDescription="@string/action_button_video_call_description"
            style="@style/Theme.RahulsTechPhoneBook.ProfileSmallActionButton"
            android:src="@drawable/ic_baseline_videocam"
            app:tint="@color/color_dark_yellow_green"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lastItemDecorated="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>


