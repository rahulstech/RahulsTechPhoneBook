<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingTop="@dimen/gap_small"
    android:paddingBottom="@dimen/gap_small">

    <TextView
        android:id="@+id/text_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/gap_tiny"
        android:paddingLeft="@dimen/gap_small"
        android:paddingRight="@dimen/gap_small"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_secondary"
        tools:text="This is line 1" />

    <TextView
        android:id="@+id/text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/gap_tiny"
        android:ellipsize="end"
        android:gravity="start"
        android:paddingLeft="@dimen/gap_small"
        android:paddingRight="@dimen/gap_small"
        android:singleLine="true"
        android:textSize="@dimen/text_size_secondary_small"
        tools:text="line 2" />

</LinearLayout>