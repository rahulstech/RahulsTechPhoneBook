<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/clickable_icon_size_xlarge"
    android:layout_height="wrap_content"
    android:padding="@dimen/gap_tiny"
    android:orientation="vertical"
    android:gravity="center"
    android:background="?attr/selectableItemBackground">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageview"
        android:layout_width="@dimen/clickable_icon_size_tiny"
        android:layout_height="@dimen/clickable_icon_size_tiny"
        android:layout_marginBottom="@dimen/gap_tiny"
        android:layout_gravity="center"
        app:shapeAppearanceOverlay="@style/Theme.RahulsTechPhoneBook.RoundedPhoto"
        tools:src="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/text_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:maxWidth="@dimen/clickable_icon_size_large"
        android:textSize="@dimen/text_size_secondary_small"
        android:layout_marginBottom="@dimen/gap_tiny"
        tools:text="Ratan Tata"/>

    <TextView
        android:id="@+id/text_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_secondary_tiny"
        android:visibility="gone"
        tools:text="Uncle"
        tools:visibility="visible"/>

</LinearLayout>