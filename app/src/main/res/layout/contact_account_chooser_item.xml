<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CheckedTextView
        android:id="@+id/display_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_secondary"
        android:paddingStart="@dimen/gap_small"
        android:paddingEnd="@dimen/gap_small"
        android:paddingTop="@dimen/gap_tiny"
        android:textStyle="bold"
        android:textColor="@color/contact_account_item_text_color"
        tools:text="Google"
        android:gravity="center_vertical"
        app:checkMarkCompat="@drawable/check_mark_visible_on_check"
        app:checkMarkTint="@color/contact_account_item_text_color"
        tools:checked="true"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/contact_account_item_text_color"
        android:textSize="@dimen/text_size_secondary_small"
        android:paddingStart="@dimen/gap_small"
        android:paddingEnd="@dimen/gap_small"
        android:paddingTop="@dimen/gap_tiny"
        android:paddingBottom="@dimen/gap_tiny"
        tools:text="example@gmail.com" />

</LinearLayout>