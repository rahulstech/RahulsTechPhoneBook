<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RahulsTechPhoneBook" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue_secondary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="backgroundColor">@color/white</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>

        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense</item>

        <item name="android:textViewStyle">@style/Theme.RahulsTechPhoneBook.TextView</item>

        <item name="floatingActionButtonStyle">@style/Widget.MaterialComponents.FloatingActionButton</item>

        <item name="materialCardViewStyle">@style/Theme.RahulsTechPhoneBook.CardView</item>

    </style>

    <style name="Theme.RahulsTechPhoneBook.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>

    <style name="Theme.RahulsTechPhoneBook.TextView">
        <item name="android:textAlignment">viewStart</item>
    </style>
    
    <style name="Theme.RahulsTechPhoneBook.RoundedPhoto">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <style name="Theme.RahulsTechPhoneBook.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">6dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>